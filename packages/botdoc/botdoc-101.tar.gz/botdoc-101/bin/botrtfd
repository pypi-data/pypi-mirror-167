#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os
import sys


INCLUDE = '''"Jinja2==3.0.0" "mock==1.0.1" "pillow>5.4.1" "alabaster>=0.7,<0.8,!=0.7.5" "commonmark==0.8.1" "recommonmark==0.5.0" "sphinx<2" "sphinx-rtd-theme<0.5" "readthedocs-sphinx-ext<2.2"'''


def popen(txt):
    for l in os.popen(txt).readlines():
        print(l.rstrip())
        sys.stdout.flush()


if os.path.isdir("emv"):
    popen("rm -fr env")

popen("python3 -mvirtualenv --system-site-packages --no-download env")
popen("env/bin/pip3 install oplib runlib botlib botdoc botd -f dist --force-reinstall --no-deps")
popen("env/bin/python3 env/bin/pip3 install -I %s" % INCLUDE)
popen("env/bin/python3 env/bin/sphinx-build env/share/doc/botdoc  html")
